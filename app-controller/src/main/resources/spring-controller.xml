<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.pbody.rest_web.controller"/>

    <!-- 加载config.config.properties-->
    <bean  id="propertyConfigurer" class="com.pbody.rest_web.util.spring.DefaultPropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="false"></property>
        <property name="fileEncoding" value="UTF-8"></property>
    </bean>

    <bean id="orgController" class="com.pbody.rest_web.controller.manager.OrgController">
        <property name="app_root" value="${app_root}"></property>
        <property name="app_name" value="${app_name}"></property>
    </bean>

</beans>